#include<stdio.h>
#include<stdlib.h>
struct student 
{
	char name[30];
	int id;
}
void main()
{
	int n;
	printf("\n Enter the number N:");
	scanf("%d",&n)
	struct student *list;
	list = ( struct student *)calloc(n*sizeof(struct student));
	printf("\n Enter the names and id's of students:");
	for (i=0;i<n,i++)
	{
		printf("\n student:%d",i+1);
		scanf("%s",(list+i)->name);
		scanf("%d",(list+i)->id);
	}
	for (i=0;i<n,i++)
	{
		printf("\n %s \t %d \n ",*((list+i)->name),*((list+i)->id));
	}


		
 



























































